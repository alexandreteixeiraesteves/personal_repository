const sample_rate:int = 44100

(*--------------------------------------------------*)
(* Sample size for data reading and overlap for     *)
(* analysis.                                        *)
(*--------------------------------------------------*)
const sample_size:int = 256

(*--------------------------------------------------*)
(* Samples per FFT                                  *)
(*--------------------------------------------------*)
const osamp:int = 4

(*--------------------------------------------------*)
(* FFT size.                                        *)
(*--------------------------------------------------*)
const fft_size:int = osamp*sample_size

(*--------------------------------------------------*)
(* Half the FFT size (without negative frequencies) *)
(*--------------------------------------------------*)
const fft_size2:int = fft_size/2




